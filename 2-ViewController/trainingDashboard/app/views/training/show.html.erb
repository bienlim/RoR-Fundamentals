<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body class="container">
  <h1>Training Batch <%= @training.batch %></h1>
  <table class="table">
    <tbody>
      <tr>
        <td>Start Date: <%= @training.start %></td>
      </tr>
      <tr>
        <td>End Date: <%= @training.end %></td>
      </tr>
    </tbody>
  </table>
  <table class="table">
    <thead>
      <tr>
        <td>Last Name</td>
        <td>First Name</td>
        <td>Job Role</td>
        <td>Action</td>
      </tr>
    </thead>
    <tbody>
    <% @graduates.each do |data| %>
      <tr>
        <td><%= data.last_name %></td>
        <td><%= data.first_name %></td>
        <td><%= data.job_role %></td>
        <td>
          <a href="/training/<%= @training.id %>/graduates/<%= data.id %>">show</a>
          <a href="/training/<%= data.id %>/edit">edit</a>
          <form action="/training/<%= data.id %>" method="post" class="d-inline">
              <input type="hidden" name="_method" value="delete">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
              <input type="submit" value="Delete">  
          </form>
      </td>
      </tr>
    <% end %>  
    
    </tbody>
  </table>
  <a href="/" class="btn btn-light" >Home</a>
</body>